{
	"env": {
		"browser": true,
		"commonjs": true,
		"amd": true,
		"es6": true
	},
	"extends": "es2015",
	"parserOptions": {
		"ecmaVersion": 2015,
		"sourceType": "module"
	},
	"rules": {
		"indent": ["warn", "tab"],
		"quotes": ["error", "single"],
		"no-unused-vars": "warn",
		"no-undef": "warn",
		"semi": ["error", "always"],
		"no-console": ["error", { "allow": ["warn", "error", "log"] }]
	},
	"plugins": ["import"]
}
